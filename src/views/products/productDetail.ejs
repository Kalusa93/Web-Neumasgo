<link rel="stylesheet" href="/css/productDetail.css">
<%- include('../partials/head.ejs') %>
<body>
  <%- include('../partials/header.ejs') %>

    <main>
      <div class="site-content">
        <div class="container-product">
          <section class="show-img-product">
            <div>
              <div class="img-product">
                <img src="/img/products/<%= product.image %>" alt="" />
              </div>
            <div>
          </section>
  
          <section class="description-product">
            <div>
              <h3><%= product.name %></h3>
            </div>
            <div class="details">
              <p class="marca"><strong>Marca:</strong> <%= product.marca %></p>
              <p class="category"><strong>Categoría: </strong> <%= product.category %></p>
              <p class="subcategory"><strong>Subcategoría: </strong> <%= product.subcategory %></p>
              <% if (product.category == "Neumáticos") { %>
                <p class="range"><strong>Rango de velocidad: </strong> <%= product.range %> </p>
              <% } %>
              
            </div>
            <a href="https://wa.me/3854128280">
              <button type="submit" id="buy-now">Consultar disponibilidad</button>
            </a>

            
            <!--<button type="" id="add-cart">Agregar al carro!</button>
            <a href="/products/edit/<%= product.id %>">Editar</a>
            <form action="/products/delete/<%= product.id %>?_method=delete" method="post">
              <button type="submit">Eliminar</button> 
            </form>-->
            <hr>
          </section>
            <% if (product.id == 1 ) { %>
              <%- include('../partials/descripcionSentiva.ejs') %>
            <% } else if (product.id == 2 ) { %>
              <%- include('../partials/descripcionPrestiva.ejs') %>
            <% } else if (product.id == 3 ) { %>
              <%- include('../partials/descripcionSentivaSport.ejs') %>
            <% } else if (product.id == 4 ) { %>
              <%- include('../partials/descripcionEximiaSport.ejs') %>
            <% } %>
        </div>
      </div>
      
    </main>

    <%- include('../partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>

