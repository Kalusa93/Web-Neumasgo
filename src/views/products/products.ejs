<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/products.css">
<body>
    <%- include('../partials/header.ejs') %>

    <main>
        <div class="container">
        <h2 class="h2-products"><%= title %></h2>
        <section>
            <% if (mostrarFiltros) { %>
            <!-- Filtros -->
            <div class=" filters-categories-container ">
                <div class="font-small font-family-body text-uppercase mb-3">Categorías</div>
                <ul class=" mb-4 pb-4 list-unstyled bottom-line"> 
                    <li data-item="0" class="mb-2"><a href="/products/neumaticos/" title="Auto" class="font-small">Todos</a></li>
                    <li data-item="1" class="mb-2"><a href="/products/neumaticos/auto/" title="Auto" class="font-small">Auto</a></li>
                    <li data-item="2" class="mb-2"><a href="/products/neumaticos/camioneta/" title="Camioneta" class="font-small">Camioneta</a></li>
                    <li data-item="3" class="mb-2"><a href="/products/neumaticos/camion/" title="Camión" class="font-small">Camión</a></li>
                    <li data-item="4" class="mb-2"><a href="/products/neumaticos/vial/" title="Vial" class="font-small">Vial</a></li>
                </ul>
            </div>
            <% } %>
            <div class="products">
                <% products.forEach((product) => { %>
                    <div class="product">
                        <a href="/products/detail/<%=product.id %>" class="main-article">
                            <div class="image-article">
                                <img src="/img/products/<%= product.image %>" class="img-article" alt="">
                            </div>
                            <div class="details-article">
                                <h4><%= product.name %></h4>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        </section>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous">
    </script>
    <script>
        function redirigirPorTipo() {
            const tipo = document.getElementById("tipo").value;
            if (tipo) {
                window.location.href = tipo;
            }
        }
    
        function redirigirPorRodado() {
            const rodado = document.getElementById("rodado").value;
            if (rodado) {
                window.location.href = rodado;
            }
        }
    </script>
</body>
</html>